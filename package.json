{
  "name": "exec-staged",
  "version": "0.0.0",
  "description": "Run commands against the current git index",
  "keywords": [
    "git",
    "lint",
    "staged",
    "lint-staged",
    "pre-commit",
    "commit",
    "hook"
  ],
  "license": "UNLICENSED",
  "author": "Nick Barry",
  "type": "module",
  "bin": {
    "exec-staged": "dist/bin/exec_staged.js"
  },
  "scripts": {
    "build": "pnpm clean && tsc --build",
    "clean": "rm -rf dist/",
    "prepare": "husky",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "simple-git": "^3.28.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^22.15.30",
    "husky": "^9.1.7",
    "knip": "^5.60.2",
    "lint-staged": "github:ItsNickBarry/lint-staged#knip",
    "prettier": "^3.5.3",
    "prettier-plugin-packagejson": "^2.5.15",
    "typescript": "^5.8.3"
  }
}
